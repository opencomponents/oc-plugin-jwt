{
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
    "no-var": "error",
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "one-var": [
      "error",
      "never"
    ],
    "prefer-const": "error"
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  }
}
